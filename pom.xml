			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${jdkCompileVersion}</source>
					<target>${jdkCompileVersion}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>clean-gen-main</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<filesets>
								<fileset>
									<directory>gen</directory>
								</fileset>
							</filesets>
						</configuration>
					</execution>
					<execution>
						<id>clean-all</id>
						<phase>clean</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<filesets>
								<fileset>
									<directory>gen</directory>
								</fileset>
								<fileset>
									<directory>target</directory>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-codegen-cli-jar</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>io.swagger</groupId>
									<artifactId>swagger-codegen-cli</artifactId>
									<version>${swagger-codegen-cli-version}</version>
									<outputDirectory>target</outputDirectory>
								</artifactItem>
							</artifactItems>
							<!-- other configurations here -->
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Try to copy the swagger ignore file to generated source folder -->
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${swagger-api-path}</outputDirectory>
							<resources>
								<resource>
									<directory>${swagger-model-path}/ignore_settings</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>exec-maven-plugin</artifactId>
				<groupId>org.codehaus.mojo</groupId>
				<executions>
					<!-- ###################################################### -->
					<!-- # Adapter -->
					<!-- Generate Adapter Model Restful Model source code -->
					<execution>
						<id>gen-adapter-model-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<workingDirectory>${basedir}</workingDirectory>
							<arguments>
								<argument>-Dmodels</argument>
								<argument>-DhideGenerationTimestamp=true</argument>
								<argument>-jar</argument>
								<argument>target/swagger-codegen-cli-${swagger-codegen-cli-version}.jar</argument>
								<argument>generate</argument>
								<argument>-i</argument>
								<argument>${swagger-model-path}/adapter.yaml</argument>
								<argument>-l</argument>
								<argument>jaxrs</argument>
								<argument>-o</argument>
								<argument>${swagger-api-path}</argument>
								<argument>-c</argument>
								<argument>${swagger-model-path}/config/adapter_model_config.json</argument>
								<argument>-s</argument>
							</arguments>
						</configuration>
					</execution>
					<!-- Generate Adapter Server Restful API source code -->
					<execution>
						<id>gen-adapter-server-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<workingDirectory>${basedir}</workingDirectory>
							<arguments>
								<argument>-Dapis</argument>
								<argument>-DsupportingFiles</argument>
								<argument>-DhideGenerationTimestamp=true</argument>
								<argument>-jar</argument>
								<argument>target/swagger-codegen-cli-${swagger-codegen-cli-version}.jar</argument>
								<argument>generate</argument>
								<argument>-i</argument>
								<argument>${swagger-model-path}/adapter.yaml</argument>
								<argument>-l</argument>
								<argument>jaxrs</argument>
								<argument>-o</argument>
								<argument>${swagger-api-path}</argument>
								<argument>-c</argument>
								<argument>${swagger-model-path}/config/adapter_server_config.json</argument>
								<argument>-s</argument>
							</arguments>
						</configuration>
					</execution>
					<!-- ###################################################### -->
					<!-- # Controller -->
					<!-- Generate Controller Model Restful source code -->
					<execution>
						<id>gen-ctrl-model-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<workingDirectory>${basedir}</workingDirectory>
							<arguments>
								<argument>-Dmodels</argument>
								<argument>-DhideGenerationTimestamp=true</argument>
								<argument>-jar</argument>
								<argument>target/swagger-codegen-cli-${swagger-codegen-cli-version}.jar</argument>
								<argument>generate</argument>
								<argument>-i</argument>
								<argument>${swagger-model-path}/controller.yaml</argument>
								<argument>-l</argument>
								<argument>jaxrs</argument>
								<argument>-o</argument>
								<argument>${swagger-api-path}</argument>
								<argument>-c</argument>
								<argument>${swagger-model-path}/config/controller_model_config.json</argument>
								<argument>-s</argument>
							</arguments>
						</configuration>
					</execution>
					<!-- Generate Controller Client Restful API source code -->
					<execution>
						<id>gen-ctrl-client-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<workingDirectory>${basedir}</workingDirectory>
							<arguments>
								<argument>-Dapis</argument>
								<argument>-DsupportingFiles</argument>
								<argument>-DhideGenerationTimestamp=true</argument>
								<argument>-jar</argument>
								<argument>target/swagger-codegen-cli-${swagger-codegen-cli-version}.jar</argument>
								<argument>generate</argument>
								<argument>-i</argument>
								<argument>${swagger-model-path}/controller.yaml</argument>
								<argument>-l</argument>
								<argument>java</argument>
								<argument>-o</argument>
								<argument>${swagger-api-path}</argument>
								<argument>-c</argument>
								<argument>${swagger-model-path}/config/controller_client_config.json</argument>
								<argument>-s</argument>
							</arguments>
						</configuration>
					</execution>
					<!-- ###################################################### -->
					<!-- # Notification -->
					<!-- Generate Notification Model Restful source code -->
					<execution>
						<id>gen-notif-model-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<executable>java</executable>
							<workingDirectory>${basedir}</workingDirectory>
							<arguments>
								<argument>-Dmodels</argument>
								<argument>-DhideGenerationTimestamp=true</argument>
								<argument>-jar</argument>
								<argument>target/swagger-codegen-cli-${swagger-codegen-cli-version}.jar</argument>
								<argument>generate</argument>
								<argument>-i</argument>
								<argument>${swagger-model-path}/notification.yaml</argument>
								<argument>-l</argument>
								<argument>jaxrs</argument>
								<argument>-o</argument>
								<argument>${swagger-api-path}</argument>
								<argument>-c</argument>
								<argument>${swagger-model-path}/config/notification_model_config.json</argument>
								<argument>-s</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<!-- Add generated code to source -->
					<execution>
						<id>add-adp-api-server-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${swagger-api-path}/src/gen/java</source>
								<source>${swagger-api-path}/src/main/java</source>
							</sources>
						</configuration>
					</execution>

				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.nsb.enms.restful.adapterserver.api.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skipTests>true</skipTests>
				</configuration>
			</plugin>

		</plugins>
	</build>

